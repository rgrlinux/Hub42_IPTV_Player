<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#140505"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:padding="8dp"
        android:src="@drawable/ic_hub42"
        android:scaleType="fitStart"
        auto:layout_constraintStart_toStartOf="parent"
        auto:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/containerClock"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp"
        auto:layout_constraintEnd_toStartOf="@+id/btnUser"
        auto:layout_constraintStart_toEndOf="@+id/imgLogo"
        auto:layout_constraintTop_toTopOf="parent">

        <TextClock
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="EEEE\ndd MMMM"
            android:format24Hour="EEEE\ndd MMMM"
            android:textColor="#00FFFF"
            android:textSize="10sp"
            android:textAllCaps="true"
            android:lineSpacingExtra="2dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="12dp"
            android:background="#4D00FFFF" />

        <TextClock
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="HH:mm"
            android:format24Hour="HH:mm"
            android:textColor="#00FFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnUser"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="8dp"
        android:src="@drawable/baseline_live_tv_24"
        app:tint="#00FFFF"
        auto:layout_constraintEnd_toEndOf="parent"
        auto:layout_constraintTop_toTopOf="parent"
        auto:layout_constraintBottom_toBottomOf="@+id/containerClock" />

    <EditText
        android:id="@+id/edtSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_card_selector"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:hint="O que a baby quer ver hoje?"
        android:textColorHint="#6600FFFF"
        android:textColor="#00FFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:inputType="text"
        android:maxLines="1"
        android:imeOptions="actionSearch"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="10dp"
        android:drawableTint="#00FFFF"
        auto:layout_constraintEnd_toEndOf="parent"
        auto:layout_constraintStart_toStartOf="parent"
        auto:layout_constraintTop_toBottomOf="@+id/containerClock" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3"
        auto:layout_constraintBottom_toTopOf="@+id/txtStatus">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnLiveTv"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:focusable="true"
            android:clickable="true"
            android:focusableInTouchMode="true"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_selector"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Live TV"
                    android:textColor="#00FFFF" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnMovies"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:focusable="true"
            android:clickable="true"
            android:focusableInTouchMode="true"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_selector"
                android:padding="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Filmes"
                    android:textColor="#00FFFF" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnSeries"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:focusable="true"
            android:clickable="true"
            android:focusableInTouchMode="true"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_selector"
                android:padding="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Séries"
                    android:textColor="#00FFFF" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/border_cyan"
        android:padding="8dp"
        android:gravity="center"
        android:text="Sem notificações pendentes"
        android:textColor="#B300FFFF"
        android:textSize="12sp"
        auto:layout_constraintBottom_toTopOf="@+id/txtMac" />

    <TextView
        android:id="@+id/txtMac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_cyan"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:text="MAC: 00:00:00:00:00"
        android:textColor="#00FFFF"
        android:textSize="12sp"
        auto:layout_constraintBottom_toBottomOf="parent"
        auto:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_cyan"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:text="WWW.HUB42.COM"
        android:textColor="#00FFFF"
        android:textSize="12sp"
        auto:layout_constraintBottom_toBottomOf="parent"
        auto:layout_constraintEnd_toEndOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loadingAnimation"  android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        auto:lottie_rawRes="@raw/splash_loading"
        auto:layout_constraintBottom_toBottomOf="parent"
        auto:layout_constraintEnd_toEndOf="parent"
        auto:layout_constraintStart_toStartOf="parent"
        auto:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>